        },
        {
            "name": "Yoann Aparici",
            "email": "y.aparici@lexik.fr"
        },
        {
            "name": "Dev Lexik",
            "email": "dev@lexik.fr"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "symfony/framework-bundle": "2.1.*",
        "swiftmailer/swiftmailer": ">=4.1.2,<4.3-dev",
        "doctrine/orm": ">=2.1.0",
        "twig/twig": ">=1.3.0"
    },
    "autoload":     {
        "psr-0": { "Lexik\\Bundle\\MailerBundle": "" }
    },
    "target-dir": "Lexik/Bundle/MailerBundle"
}